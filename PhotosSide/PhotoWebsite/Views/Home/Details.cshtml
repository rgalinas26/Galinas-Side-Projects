@model Photo
@{
    ViewData["Title"] = "Details";
}

<h1>Image Details</h1>

<div id="photo-detail">
    <img id="photo-image" src="~/images/@Model.ImageName" />
    <p>@Model.Description</p>
    @if (Model.IsBird == true)
    {
        <a href="https://www.amazon.com/gp/product/B0001EFIGG?ie=UTF8&tag=birdwatchin06-20&linkCode=as2&camp=1789&creative=390957&creativeASIN=B0001EFIGG">
            <img id="advert-image" src="~/images/NikonBinocs.jpg" />
        </a>
    }
    else if (Model.IsCVNP == true)
    {
        <a href="https://www.clevelandmetroparks.com/">
            <img id="advert-image" src="~/images/CVNP.jfif" />
        </a>
    }
    else
    {
        <a href="https://www.petittigardencenter.com/">
            <img id="advert-image" src="~/images/Petitti.jfif" />
        </a>
    }


</div>

